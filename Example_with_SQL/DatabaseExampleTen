SELECT *
FROM pets
WHERE color_of_animal = 'Black';
SELECT *
FROM pets
WHERE age_of_animal < 5;

INSERT INTO pets(kind_of_animal, name_of_animal, color_of_animal, age_of_animal, animal_owner)
